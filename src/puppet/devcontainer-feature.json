{
    "id": "puppet",
    "version": "0.2.0",
    "name": "Puppet Agent and PDK",
    "description": "Install Puppet Agent and PDK via official Puppetlabs repository.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "8",
                "7"
            ],
            "default": "8",
            "description": "Select or enter a Puppet version to install"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "puppet.puppet-vscode"
            ],
            "settings": {
                "puppet.installType": "pdk",
                "puppet.installDirectory": "/opt/puppetlabs/pdk"
            }
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}